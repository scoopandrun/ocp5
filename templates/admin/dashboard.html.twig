{% extends "admin/layout.html.twig" %}

{% block title %}
	Blog Admin - Tableau de bord
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-7 position-relative z-index-2">
			<div class="card card-plain mb-4">
				<div class="card-body p-3">
					<div class="row">
						<div class="col-lg-6">
							<div class="d-flex flex-column h-100">
								<h2 class="font-weight-bolder mb-0">Statistiques générales</h2>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-5 col-sm-5">

					<div class="card  mb-2">
						<div class="card-header p-3 pt-2">
							<div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark shadow text-center border-radius-xl mt-n4 position-absolute">
								<i class="material-icons opacity-10">description</i>
							</div>
							<div class="text-end pt-1">
								<p class="text-sm mb-0 text-capitalize">Posts</p>
								<h4 class="mb-0">{{ stats.postCount }}</h4>
							</div>
						</div>

						<hr class="dark horizontal my-0">
						<div class="card-footer p-3"></div>
					</div>

				</div>
				<div class="col-lg-5 col-sm-5 mt-sm-0 mt-4"></div>
			</div>

		</div>
	</div>
{% endblock %}
